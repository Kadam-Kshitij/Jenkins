pipeline {
    agent {
        docker { 
            image 'ubuntu-app:latest'
            args '-v /home/ubuntu/jenkinsBuild:/home/hello'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'g++ -o exe Hello.cpp'
                sh './exe'
                sh 'mkdir -p /home/hello'
                sh 'su root'
                sh 'sudo cp -r ./exe /home/hello'
                sh 'whoami'
            }
        }
    }
}
